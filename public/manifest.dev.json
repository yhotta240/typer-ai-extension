{
  "manifest_version": 3,
  "name": "Typer AI : テキスト入力 AI アシスタント",
  "short_name": "Typer AI",
  "version": "0.0.1",
  "description": "テキスト入力を支援する AI アシスタントツール",
  "icons": {
    "48": "icons/icon.png"
  },
  "permissions": ["storage", "tabs"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "css": ["content/miniui-ui.css"],
      "js": ["content.js"]
    }
  ]
}
